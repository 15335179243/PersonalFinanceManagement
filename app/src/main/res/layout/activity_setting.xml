<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <androidx.core.widget.NestedScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/colorBackground"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/ll_about"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_50"
                android:layout_marginTop="@dimen/dp_8"
                android:background="@android:color/white"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="@dimen/dp_50"
                    android:layout_weight="9"
                    android:gravity="center_vertical"
                    android:text="       关于作者"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/sp_16" />

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="@dimen/dp_25"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:src="@drawable/right_back" />
                <View
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.8"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_setpassword"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_50"
                android:layout_marginTop="@dimen/dp_8"
                android:background="@android:color/white"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="@dimen/dp_50"
                    android:layout_weight="9"
                    android:gravity="center_vertical"
                    android:text="      设置密码"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/sp_16" />

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="@dimen/dp_25"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:src="@drawable/right_back" />
                <View
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.8"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_clear_cache"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_50"
                android:layout_marginTop="@dimen/dp_8"
                android:background="@android:color/white"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="@dimen/dp_50"
                    android:layout_weight="4"
                    android:gravity="center_vertical"
                    android:text="      清除缓存"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/sp_16" />

                <TextView
                    android:id="@+id/tv_age"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/dp_50"
                    android:layout_weight="5"
                    android:gravity="center_vertical|end"
                    android:text="100kb"

                    android:textColor="@android:color/darker_gray"
                    android:textSize="@dimen/sp_14" />


                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="@dimen/dp_25"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:src="@drawable/right_back" />
                <View
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.8"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_follow_wechat"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_50"
                android:layout_marginTop="@dimen/dp_8"
                android:background="@android:color/white"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="@dimen/dp_50"
                    android:layout_weight="5"
                    android:gravity="center_vertical"
                    android:text="      关注微信"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/sp_16" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="@dimen/dp_50"
                    android:layout_weight="9"
                    android:gravity="center_vertical"
                    android:text="输入wh171获得《二次吸引挽回秘籍》"
                    android:textColor="@android:color/darker_gray"
                    android:textSize="@dimen/sp_13" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_5"
                android:background="@color/item_lins" />

            <LinearLayout
                android:id="@+id/ll_log_out"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_50"
                android:layout_marginTop="@dimen/dp_8"
                android:background="@android:color/white"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="@dimen/dp_50"
                    android:layout_weight="9"
                    android:gravity="center"
                    android:text="退出登录"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/sp_16" />


            </LinearLayout>


        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>